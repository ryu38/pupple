<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="swipeViewModel"
            type="com.doryan.pupple.ui.swipe.SwipeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/image_target"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/linear_buttons">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:imageUrl="@{swipeViewModel.dogs[0].imageUrl}"
                    tools:srcCompat="@tools:sample/backgrounds/scenic" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_on_image_background"
                    android:layout_gravity="bottom"
                    android:paddingTop="32dp"
                    android:paddingBottom="16dp"
                    android:paddingHorizontal="24dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:text="@{swipeViewModel.currentDogName.firstName}"/>
                </LinearLayout>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/linear_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/image_target"
            app:layout_constraintBottom_toBottomOf="parent">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_like"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:onClick="@{() -> swipeViewModel.fav()}"
                style="@style/MainButton.Circle"
                app:icon="@drawable/ic_baseline_favorite_24"
                app:iconSize="40dp"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Circle" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_pass"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:onClick="@{() -> swipeViewModel.pass()}"
                style="@style/MainButton.Circle"
                android:backgroundTint="?attr/colorSurface"
                app:iconTint="@color/blue"
                app:icon="@drawable/ic_baseline_change_history_24"
                app:iconSize="40dp"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Circle"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>