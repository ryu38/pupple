<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pupple" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Surface color -->
        <item name="colorSurface">@color/surfaceColor</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?android:attr/colorBackground</item>
        <item name="android:windowLightStatusBar" tools:targetApi="l">true</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/MainButton</item>
    </style>

    <style name="MainButton" parent="Widget.MaterialComponents.Button">
    </style>

    <style name="MainButton.Circle">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Circle</item>
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="iconTint">?attr/colorPrimary</item>
        <item name="android:insetTop">4dp</item>
        <item name="android:insetBottom">4dp</item>
        <item name="android:insetLeft">4dp</item>
        <item name="android:insetRight">4dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="MyToolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColorPrimary">?attr/colorOnBackground</item>
        <item name="colorOnPrimary">?attr/colorOnBackground</item>
    </style>

</resources>